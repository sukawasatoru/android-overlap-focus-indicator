<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_width="896dp"
    tools:layout_height="110.298dp"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <!-- 204dp = 196dp + 8dp -->
    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/list"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:horizontalSpacing="8dp"
        android:gravity="end"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/carousel_item" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="start"
        app:constraint_referenced_ids="title,subtitle" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constrainedWidth="true"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="@id/barrier_titles"
        app:layout_constraintEnd_toStartOf="@id/list"
        tools:text="Title" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/barrier_titles"
        app:layout_constraintEnd_toStartOf="@id/list"
        tools:text="Subtitle" />

    <!-- 56dp = 64dp - @android:dimen/button_padding_horizontal_material -->
    <Button
        style="@android:style/Widget.Material.Button"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:duplicateParentState="true"
        android:textAllCaps="false"
        android:text="Button"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/indicators"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/barrier_titles"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/indicators"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="64dp"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants"
        android:importantForAccessibility="noHideDescendants"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</merge>
